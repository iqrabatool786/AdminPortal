@model WebApplication1.Models.Project

<h2>Project Details</h2>
<div class="mb-3">
    <label><strong>Project Name:</strong></label>
    <p>@Model.CompanyName</p>
</div>

<div class="mb-3">
    <label><strong>Service Required:</strong></label>
    <p>@Model.ServiceRequired</p>
</div>

<div class="mb-3">
    <label><strong>Start Date:</strong></label>
    <p>@Model.StartDate.ToString("MM/dd/yyyy")</p>
</div>

<div class="mb-3">
    <label><strong>Completion Date:</strong></label>
    <p>@Model.CompletionDate.ToString("MM/dd/yyyy")</p>
</div>

<div class="mb-3">
    <label><strong>Status:</strong></label>
    <p>@Model.Status</p>
</div>

<div class="mb-3">
    <label><strong>Employee:</strong></label>
    <p>@Model.Employee.Username</p> <!-- Assuming Employee is a navigation property -->
</div>

<a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Projects</a>
